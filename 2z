#!/bin/bash

# Запрашиваем у пользователя ввод имени с помощью диалогового окна
# Результат сохраняем в переменной NAME
NAME=$(dialog --inputbox "Введите ваше имя:" 8 40 3>&1 1>&2 2>&3)

PROFESSION=$(dialog --inputbox "Введите вашу профессию:" 8 40 3>&1 1>&2 2>&3)

# Выводим сообщение с именем и профессией, используя диалоговое окно
dialog --msgbox "Имя: $NAME\nПрофессия: $PROFESSION" 7 60
