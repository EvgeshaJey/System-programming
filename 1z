#!/bin/bash


# Запускаем первый диалог с заголовком и вопросом
dialog --title "Первый диалог" --yesno "Вы хотите продолжить?" 7 60

# Проверяем код возврата последней команды (диалога)
if [ $? -eq 0 ]; then
    # Если пользователь нажал "Да", запускаем второй диалог
    dialog --title "Второй диалог" --yesno "Вы уверены?" 7 60
    # Проверяем код возврата второго диалога
    if [ $? -eq 0 ]; then
        # Если пользователь подтвердил второй диалог
        dialog --msgbox "Вы подтвердили оба диалога." 7 60
    else
        # Если пользователь отменил второй диалог
        dialog --msgbox "Вы отменили второй диалог." 7 60
    fi
else
    # Если пользователь отменил первый диалог
    dialog --msgbox "Вы отменили первый диалог." 7 60
fi
